(def x 100)
(def y 100)
(def sum (plambda (a b) (+ a b x y)))
(def sum3 (plambda (a b) (+ a b)))
(check ($sum 1 2) 203)
(check ($sum3 1 2) 3)


(defmacro gen-sum (n) '(plambda (x) (+ x ~n)))
(def sum10 (gen-sum 10))
(check ($sum10 100) 110)

(def summer 100)
(check (array_map (plambda (n) (+ n summer)) [1 2 3 4 5 6]) [101 102 103 104 105 106])
(fn fn-gen-sum (n)  (plambda (x) (+ x n)))

(def sum20 (fn-gen-sum 20))
(check ($sum20 30) 50)