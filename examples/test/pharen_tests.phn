(require "test.php")
(use pharen.path as path)
(use pharen.test as test)
(define "TESTS_DIR" (dirname __FILE__))
(require-once (path.join TESTS-DIR "../.." "pharen.php"))
(compile-lang)

(fn run-test (fname)
  (print (. "Running test: " fname "\n"))
  (compile-file (. TESTS-DIR "/tests/" fname ".phn") (. TESTS-DIR "/tmp"))
  (require (. TESTS-DIR "/tmp/" fname ".php")))
    
    
(fn check  (expr expected) (test.check expr expected))

(let [tests 
      ["literals",
       "func_calls",
       "comments",
       "bindings",
       "lists_and_dicts",
       "cond",
       "if",
       "function_definition",
       "lambdas",
       "plambda",
       "macros",
       "multi",
       "oop"
       "lazy"
       "ns",
       "lang_functions",
       "php_interop"]]


  (test.describe "Pharen"
      (lambda ()
          (map #run-test tests))))
